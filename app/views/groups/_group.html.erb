<div class="card w-75 mx-auto my-4">
  <div class="card-body d-flex justify-content-between">
    <%= link_to group, class: 'card-link' do%>
        <%= display_icon(group) %>
        <span> <%= group.name %> </span>
        <% end %>
     <div class ="card-footer">
        Created by <strong><%=group.user.name %></strong><br/> On <%= creation_date(group)%>
     </div>
  </div>

   <div>
      <%= link_to '<i class="small material-icons indigo-text darken-4">visibility</i>'.html_safe, group %>
      <% if group.user_id == current_user.id %>
        <%= edit_group_link(group) %>
        <%= delete_group_link(group) %>
      <%  end  %>
    </div>
</div>