<div class="col s12">
  <div class="card horizontal left-align">
    <div class="card-stacked">
      <div class="card-content">

        <%= form_with(model: outlay) do |form| %>
       
          <%= form.text_field :name, placeholder: 'Name' %>
          <%= form.text_field :amount, placeholder: 'Amount' %>
          <%= form.collection_check_boxes( :group_ids, Group.all, :id, :name ) %>

          <br/>
          <br/>
          <div class="btn waves-effect waves-light center">
            <%= form.submit %>
          </div>
        <% end %>
      </div>
      <div class="card-action">
        <%= link_to '<i class="small material-icons green-text darken-4">arrow_back</i>'.html_safe, outlays_path %>
      </div>
    </div>
  </div>
</div>