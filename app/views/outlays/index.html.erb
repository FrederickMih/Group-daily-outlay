<% provide(:title, "Outlay") %>
<div class="card">
  <div class="card-body d-flex justify-content-between">
    <span>Total Outlay</span>
    <strong>$<%=amount_spend_per_day(@outlays) %></strong>
  </div>
</div>
<div class="d-flex justify-content-center mt-3">
  <%= will_paginate @outlays,renderer: BootstrapPagination::Rails %>
</div>
<div class="padding-for-new-entry">
  <%= render @outlays %>
</div>
<div class="bg-primary py-3" >
  <%= link_to 'New Outlay', new_outlay_path, type: "button", class: "btn btn-outline-light w-75 mx-auto d-block py-3" %>
</div>

 