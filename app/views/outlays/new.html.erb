<% provide(:title, "New Expense") %>
<div class="card my-3 text-center">
  <div class="card-body px-5">
    <%= form_with model: @outlay, local: true do |form| %>


     <div class="input-group my-3 ">
        <div class="input-group-prepend">
          <%= form.label :group_id, class: 'input-group-text' %>
        </div>
        <%= form.collection_radio_buttons(:group_ids, Group.all,:id, :name, {class: 'custom-select'}, {prompt: true}) %>
      </div>


      <div class="md-form my-3">
        <%= form.text_field :name, class: 'form-control', placeholder: 'Name'%>
      </div>
      <div class="md-form my-3">
        <%= form.number_field :amount, class: 'form-control', placeholder: 'Amount'%>
      </div>

     
      <%= form.submit 'Submit', class: 'btn btn-primary mt-3 px-5' %>
    <% end %>
     
      <div class="card-action">
        <%= link_to '<i class="small material-icons green-text darken-4">arrow_back</i>'.html_safe, outlays_path %>
      </div>

  </div>
</div>



